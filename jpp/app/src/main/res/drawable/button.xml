<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Quand le bouton est sélectionné -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50"/> <!-- vert quand focus -->
            <corners android:radius="12dp"/>
            <padding android:left="20dp" android:top="12dp"
                android:right="20dp" android:bottom="12dp"/>
        </shape>
    </item>

    <!-- Quand on clique (optionnel) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#2E7D32"/> <!-- vert foncé -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- État normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DDDDDD"/> <!-- gris clair -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

</selector>
